{
  "compilerOptions": {
    "target": "ES2019"
  , "module": "CommonJS"
  , "strict": true
  , "noUnusedLocals": true
  , "noUnusedParameters": true
  , "esModuleInterop": true
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@guards/*": ["src/guards/*"]
    , "@interfaces/*": ["src/interfaces/*"]
    , "@test/*": ["__tests__/*"]
    }
  }
}
